import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		while(sc.hasNext()){
			int n=sc.nextInt();
			int sum=0;
			for(int i=3;i<=n;i++) {
				if(i%3==0) {
					sum=sum+i;
				}
			}
			
			System.out.println(sum);
		}
	}

}
