public class Main{		
	public static void main(String[] args) {
		java.util.Scanner sc = new java.util.Scanner(System.in);  
        int a = sc.nextInt();  
        int i,sum=0;  
        for(i=1;i<=a-1;i++) {  
              
            if(a==1) {  
            }else {  
                System.out.printf("%d + ",i);  
                sum=sum+i;  
            }  
        }
        sum=sum+a;  
        System.out.printf("%d = %d",a,sum);  
        System.out.println(); 
	}
}
